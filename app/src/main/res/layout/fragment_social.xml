<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sp_bg_color"
        tools:context=".fragment.SocialFragment">

        <include
            android:id="@+id/toolbarNewsD"
            layout="@layout/toolbar_common"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toolbar="@{@string/social}"
            app:toolbarImgTwo="@{@drawable/search}" />

        <HorizontalScrollView
            android:id="@+id/recViewStory"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarNewsD">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgStory"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ssimg"
                    android:layout_marginTop="22dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvYourStory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Your Story"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/imgStory"
                    app:layout_constraintStart_toStartOf="@+id/imgStory"
                    app:layout_constraintTop_toBottomOf="@+id/imgStory" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintTop_toTopOf="@+id/imgStory"
                    app:layout_constraintEnd_toEndOf="@+id/imgStory"
                    app:layout_constraintStart_toStartOf="@+id/imgStory"
                    app:srcCompat="@drawable/ellipse" />

                <ImageView
                    android:id="@+id/imgPlus"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                    app:layout_constraintEnd_toEndOf="@+id/imageView9"
                    app:layout_constraintStart_toStartOf="@+id/imageView9"
                    app:layout_constraintTop_toTopOf="@+id/imageView9"
                    app:srcCompat="@drawable/story_plus" />


                <ImageView
                    android:id="@+id/imgStory2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/sec"
                    android:layout_marginTop="22dp"
                    app:layout_constraintStart_toEndOf="@+id/imgStory"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvYourStory2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Eva_1"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/imgStory2"
                    app:layout_constraintStart_toStartOf="@+id/imgStory2"
                    app:layout_constraintTop_toBottomOf="@+id/imgStory2" />

                <ImageView
                    android:id="@+id/imgStory3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/story_images"
                    android:layout_marginTop="22dp"
                    app:layout_constraintStart_toEndOf="@+id/imgStory2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvYourStory3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="MJ96"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/imgStory3"
                    app:layout_constraintStart_toStartOf="@+id/imgStory3"
                    app:layout_constraintTop_toBottomOf="@+id/imgStory3" />

                <ImageView
                    android:id="@+id/imgStory4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/story_imgg"
                    android:layout_marginTop="22dp"
                    app:layout_constraintStart_toEndOf="@+id/imgStory3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvYourStory4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="John12"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/imgStory4"
                    app:layout_constraintStart_toStartOf="@+id/imgStory4"
                    app:layout_constraintTop_toBottomOf="@+id/imgStory4" />

                <ImageView
                    android:id="@+id/imgStory5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/ss"
                    android:layout_marginTop="22dp"
                    app:layout_constraintStart_toEndOf="@+id/imgStory4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvYourStory5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Music_2"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/imgStory5"
                    app:layout_constraintStart_toStartOf="@+id/imgStory5"
                    app:layout_constraintTop_toBottomOf="@+id/imgStory5" />

                <ImageView
                    android:id="@+id/imgStory6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/story_images"
                    android:layout_marginTop="22dp"
                    app:layout_constraintStart_toEndOf="@+id/imgStory5"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvYourStory6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="MJ96"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/imgStory6"
                    app:layout_constraintStart_toStartOf="@+id/imgStory6"
                    app:layout_constraintTop_toBottomOf="@+id/imgStory6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/line_27"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#26FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/recViewStory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="195dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewSocial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_27" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingBtn"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/plus"
            app:fabCustomSize="60dp"
            app:maxImageSize="35dp"
            app:backgroundTint="@color/white"
            app:borderWidth="5dp"
            app:tint="@color/white"
            android:backgroundTint="#6E1FAE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
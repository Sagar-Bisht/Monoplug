<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sp_bg_color">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="25dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22dp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_border_design"
            >

            <ImageView
                android:id="@+id/imgB"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgS"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/home_img_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgB" />

            <ImageView
                android:id="@+id/imgS2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/home_img_two"
                app:layout_constraintBottom_toBottomOf="@+id/imgS"
                app:layout_constraintStart_toEndOf="@+id/imgS"
                app:layout_constraintTop_toTopOf="@+id/imgS" />

            <ImageView
                android:id="@+id/imgS3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/home_img_two"
                app:layout_constraintBottom_toBottomOf="@+id/imgS2"
                app:layout_constraintStart_toEndOf="@+id/imgS2"
                app:layout_constraintTop_toTopOf="@+id/imgS2" />

            <ImageView
                android:id="@+id/imgS4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/home_img_two"
                app:layout_constraintBottom_toBottomOf="@+id/imgS3"
                app:layout_constraintStart_toEndOf="@+id/imgS3"
                app:layout_constraintTop_toTopOf="@+id/imgS3" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="20dp"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgS"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sp_bg_color"
        tools:context=".fragment.ChatFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toolbar="@{@string/mj96}"
            app:toolbarImg="@{@drawable/back}"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginStart="149dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="149dp"
            android:background="@drawable/today_text_bg"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Today"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/chat_text_one_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hello, how are you!"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/cl"
                app:layout_constraintEnd_toEndOf="@+id/cl"
                app:layout_constraintStart_toStartOf="@+id/cl"
                app:layout_constraintTop_toTopOf="@+id/cl" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/invite_img"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/cl"
            app:layout_constraintTop_toBottomOf="@+id/cl" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/01/2022 11:00 AM"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="8dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/img"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toTopOf="@+id/img" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/chat_text_one_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv9">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="I'm good too"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/cl2"
                app:layout_constraintEnd_toEndOf="@+id/cl2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/cl2"
                app:layout_constraintTop_toTopOf="@+id/cl2"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/invite_img"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/cl"
            app:layout_constraintTop_toBottomOf="@+id/cl2" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/01/2022 11:00 AM"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintBottom_toBottomOf="@+id/img2"
            app:layout_constraintStart_toEndOf="@+id/img2"
            app:layout_constraintTop_toTopOf="@+id/img2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl3"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#80FFFFFF"
            android:layout_marginEnd="15dp"
            android:background="@drawable/chat_text_two_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl">

            <TextView
                android:id="@+id/tvLessonDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:gravity="center"
                android:text="Hey..."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintBottom_toBottomOf="@+id/cl3"
                app:layout_constraintEnd_toEndOf="@+id/cl3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/cl3"
                app:layout_constraintTop_toTopOf="@+id/cl3"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/invite_img"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl3" />
        <TextView
            android:id="@+id/tvBehindTheScene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/01/2022 11:00 AM"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img3"
            app:layout_constraintEnd_toStartOf="@+id/img3"
            app:layout_constraintTop_toTopOf="@+id/img3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl4"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/chat_text_two_bg"
            android:backgroundTint="#80FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBehindTheScene"
            app:layout_goneMarginTop="23dp">

            <TextView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Iâ€™m good you say"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img4"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/invite_img"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl4" />
        <TextView
            android:id="@+id/tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/01/2022 11:00 AM"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img4"
            app:layout_constraintEnd_toStartOf="@+id/img4"
            app:layout_constraintTop_toTopOf="@+id/img4" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constL"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#80E1ACDA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/sendMsg"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/et_design"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:hint="Type a message..."
                android:singleLine="true"
                android:fontFamily="@font/montserrat_medium"
                android:textColorHint="@color/text_color"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@null"
                app:layout_constraintStart_toStartOf="@+id/sendMsg"
                app:layout_constraintTop_toTopOf="@+id/sendMsg"
                app:layout_constraintEnd_toStartOf="@+id/imgSend"
                app:layout_constraintBottom_toBottomOf="@+id/sendMsg" />

            <ImageView
                android:id="@+id/imgSend"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/send_icon"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/sendMsg"
                app:layout_constraintEnd_toEndOf="@+id/sendMsg"
                app:layout_constraintTop_toTopOf="@+id/sendMsg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>